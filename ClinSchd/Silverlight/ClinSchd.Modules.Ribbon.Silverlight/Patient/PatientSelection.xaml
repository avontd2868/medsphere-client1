<UserControl x:Class="ADT.Modules.Ribbon.Patient.PatientSelection"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cal="http://www.codeplex.com/CompositeWPF" 
    xmlns:inf="clr-namespace:ADT.Infrastructure;assembly=ADT.Infrastructure"
    Title="{Binding Title}" Height="400" Width="400">
    <Grid>
		<ItemsControl cal:RegionManager.RegionName="{x:Static inf:RegionNames.PatientSelectionRegion}"
				Margin="0,0,10,0" VerticalAlignment="Stretch"
				RenderTransformOrigin="0.5,0.5">
			<ItemsControl.ItemsPanel>
				<ItemsPanelTemplate>
					<StackPanel />
				</ItemsPanelTemplate>
			</ItemsControl.ItemsPanel>
		</ItemsControl>
	</Grid>
</UserControl>
